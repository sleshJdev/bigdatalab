# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                               controllers.UserController.index
GET         /v1/users/id/:id                controllers.UserController.matchUserId(id: Long)
GET         /v1/users/cookie/:cookie        controllers.CookieMatchingController.matchUserCookie(cookie: String)
GET         /v2/users/cookie/:cookie        controllers.CookieMatchingController.handleUserCookieRedirect(cookie: String)

POST        /v1/auth/token                  controllers.UserController.generateToke()

POST        /sign-up                        controllers.AuthController.signUp()
POST        /sign-in                        controllers.AuthController.signIn()

GET         /exchangerates                  controllers.ExchangeRateController.exchangeRates()
GET         /countrylookup                  controllers.CountryLookupController.countryLookUp()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
